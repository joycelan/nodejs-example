(function(){
    
    var simpleParamParser = function(lines){
    var settings = {};
    lines.split("\n").forEach(function(l, i){
        if(!l) return;
        //expect(l).to.contain('=');
        l = l.split("=");
        console.log(l)
        settings[l[0]] = l[1].slice(1, -1);
    });
    return settings;
};

